<%- include("header"); -%>

<h1>posts</h1>
<% posts.forEach(function(post){ %>
   <h3><%= post.title %> </h3>
      <p> <%= post.content.substring(0, 100) + "..."  %>
       <a href="/post/<%= post.title %> ">read more</a> 
   </p>  
      <form action="/posts/delete/<%= post.title %>" method="post">   
          <button type="submit">delete</button>
      </form>
     

   <%})%>
 
<%- include("footer") -%>